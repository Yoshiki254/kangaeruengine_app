<section class="hero is-fullheight">
  <div class='container has-text-centered'>
      <div class="column is-6 is-offset-3">	
        <h3 class="title has-text-grey is-italic">Add your photo</h3>
        <div class='block'></div>
        <div class="form-group">
          <%= form_for [@user, @picture] do |f| %>

            <%= f.label :caption %>
            <%= f.text_field :caption, :class => 'input is-success'%>

            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control floating-label" %> 
            <figure class="image is-300x300">            
						</figure>

            <%= f.hidden_field :user_id, :value => params[:user_id] %>
            <div class='block'></div>
            <%= f.submit 'Save', :class => 'button is-link'%>

          <% end %>
        </div>
      </div>
  </div>
</section>