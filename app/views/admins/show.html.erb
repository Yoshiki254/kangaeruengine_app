<%= link_to 'Sign Out', destroy_admin_session_path, method: :delete %>

<p>
<div>
	<%= form_tag('/admins/search', method: :get) do %>
	  <input class="search__query" name="keyword" placeholder="生徒名で検索" type="string" value="">
	  	<button class="btn-search" title="検索" type="submit"></button>
	  </input>
	<% end %>
</div>
</p>

<div>
	<% @users.each do |user| %>
	<p>
	  <li><%= user.name %></li>
	  電話番号：<%= user.tel %><br/>
		次回授業時間：
	  <% if user.next_lesson.present? %>
	    <%= user.next_lesson %><br/>
		<% else %>
		  未決定<br/>
		<% end %>

		前回授業：
	  <% if user.users_lessons.present? %>
	  	<%= user.users_lessons.where(check: 1).order("updated_at DESC").first.lesson.name %><br/>
	  <% else %>
	  	未受講<br/>
	  <% end %>

		10ケースマラソン：
		<% if user.users_interviews.present? %>
			<%= user.users_interviews.where(check: 1).order("updated_at DESC").first.interview.name %><br/>
		<% else %>
		  未開始<br/>
		<% end %>

	  12示唆マラソン：
	  <% if user.users_insights.present? %>
	    <%= user.users_insights.where(check: 1).order("updated_at DESC").first.insight.name %><br/>
	  <% else %>
	    未開始<br/>
	  <% end %>
	</p>
  <% end %>
</div>