<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>
<div class="m0dal" id="new_users_expedition_modal" >
	<div class="m-dialog">
    <div class="m-header">
    	<button type="button" class="close" id="m-close" data-dismiss="modal" aria-hidden="true">&times;</button>
    	<p>続・考えるエンジン講座</p>
        <h4 class="m-title" id="myModalLabel"><%= expedition.name %></h4>
    </div>
		<div class="m-body">
			<%= form_for [current_user, @users_expedition], remote: remote, html: {role: :form, 'data-model' => 'users_expedition'} do |f| %>

			  <% if @users_expedition.errors.any? %>
			    <div id="error_explanation">
			      <ul>
				      <% @users_expedition.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="form-group">
			    <%= f.label :受講日, class: 'control-label' %>
			    <strong><%= f.date_field :date, class: 'form-control' %></strong>
			    <span class="help-block"></span>
			    <%= f.hidden_field :expedition_id, :value => expedition.id %>
			  </div>

			  <div class="actions">
			    <%= f.submit '登録', id: "btn btn-submit" %>
			  </div>
			<% end %>
    </div>
	</div>
</div>
