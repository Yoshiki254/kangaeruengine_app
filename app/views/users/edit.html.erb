
<section class="section">
  <div class="hero-body">
    <div class='container has-text-centered'>
			<%= current_user.profile_notification %>
			<div class="columns">
			  <div class="column is-4 is-offset-4 has-text-centered">				
				  <div class="form">
					  <%= form_for current_user do |f| %>
						<h3 class="subtitle">プロフィール画像（必須）</h3>
						  <p class="subtitle is-size-6">登録済みのお写真</p>
								<%= @user.image_select %>
							<div class='block'></div>
							<div class="form-group file">
								<%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
							</div>
							<figure class="image is-256x256">            
							</figure>
    					  <h3 class="subtitle">登録情報</h3>
							<div class="form-group">
								<%= f.text_field :name, placeholder: "お名前（漢字）", :class => 'input is-success'%><br>
								<%= f.text_field :name_kana, placeholder: "お名前（フリガナ）", :class => 'input is-success' %><br>
								<%= f.date_field :birthday, placeholder: "生年月日", :class => 'input is-success' %><br>
								<%= f.text_field :tel, placeholder: "電話番号", :class => 'input is-success' %><br>
								<%= f.text_field :job, placeholder: "ご職業", :class => 'input is-success' %>
								<div class='block'></div>
								<%= f.submit "登録", :class => 'button is-link'%>
							</div>
						<% end %>
				  </div>
				</div>
			</div>
  	</div>
	</div>
</section>


